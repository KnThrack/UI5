<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Kn.KnThrack.controller.SearchPlayer"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>homePageTitle}" class="sapUiResponsiveContentPadding">
		<content>
			<SearchField search="onSearch" width="100%"/>
			<List items="{destiny>/}">
				<StandardListItem title="{destiny>displayName}" description="{destiny>displayName}" icon="https://www.bungie.net{destiny>iconPath}"
					press=".onPlayerPress" type="Navigation" iconDensityAware="false"/>
			</List>
		</content>
	</Page>
</mvc:View>